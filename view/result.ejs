<!DOCTYPE html>
<html lang="nl">
    <%- include ('../view/partials/head') %>
    <body>
        <%- include ('../view/partials/header') %>
        <!-- het dier wordt weergegevn wat er bij past -->
        <main>
            <div class="results">
                <% resultPet.forEach((pet) => { %>
                <div class="info">
                    <img
                        class="petPicture"
                        data-src="<%= pet.images[0] %>"
                        loading="lazy"
                        alt="photo of a pet"
                        width="300"
                        height="300"
                    />
                    <div>
                        <ul class="infoList">
                            <li><%= pet.name %></li>
                            <li><%= pet.age %></li>
                            <li><%= pet.soort %></li>
                            <li><%= pet.trait %></li>
                        </ul>
                        <form
                            class="favoriteForm"
                            method="post"
                            action="/liked"
                        >
                            <input
                                type="hidden"
                                name="petname"
                                value="<%= pet.name %>"
                            />
                            <button
                                name="favorite"
                                type="submit"
                                value="<%= pet._id %>"
                            >
                                Favorite
                            </button>
                            <a
                                class="anchorButton"
                                href="/result/<%= pet._id %>"
                                >More info</a
                            >
                        </form>
                    </div>
                </div>
                <% }) %>
                <a href="http://localhost:4000/"><button>Retake!</button></a>
            </div>
        </main>
        <script src="/static/intersectionObv.js"></script>
    </body>
</html>
