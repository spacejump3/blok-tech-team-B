<!DOCTYPE html>
<html lang="nl">
    
<%- include ('../view/partials/head') %>

<body>
<%- include ('../view/partials/header') %>

<!-- het dier wordt weergegevn wat er bij past -->
<main>
    <div class="results">
        <% resultPet.forEach((pet) => { %>
        <div class="info"><img class="petpicture" src="<%= pet.images[0] %>" alt="photo of a pet" />
            <div>
                <h2><%= pet.name %></h2>
                <h2><%= pet.age %></h2>
                <h2><%= pet.soort %></h2>
                <h2><%= pet.trait %></h2>
                <form class="favoriteForm" method="post" action="/liked">
                    <input type="hidden" name="petname" value="<%= pet.name %>">
                    <button class="likeBtn" name="favorite" type="submit" value="<%= pet._id %>">Favorite</button>
                </form>
                <a href="/result/<%= pet._id %>">meer info</a>
            </div>
        </div>
        <% }) %>
        <a href="http://localhost:4000/"><button>Retake!</button></a>
    </div>
</main>
</body>
</html>